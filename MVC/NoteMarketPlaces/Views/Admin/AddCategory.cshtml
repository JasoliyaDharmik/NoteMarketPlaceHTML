@model NoteMarketPlaces.Models.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/AdminRegister.cshtml";
}

    <form class="user-details-form" method="post">
      
        <input hidden name="ID" value="@Model.ID" />
        
        <!-- Second Section -->
        <section id="basic-profile-details" class="user-profile content-box-md">
            <div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="head">
                                <h3>Add Category</h3>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <div class="row">

                                <div class="col-12">
                                    <!-- First Name -->
                                    <div class="form-group">
                                        <label class="mylabel">Category Name *</label>
                                        @Html.TextBoxFor(m => m.Categories, new { @class = "form-control InputEmail1", @placeholder = "Enter your Category Name" })
                                        @Html.ValidationMessageFor(m => m.Categories)

                                    </div>
                                </div>
                            </div>

                            <!-- Upload a Picture -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="textarea-input">
                                            <label class="mylabel" for="InputEmail1">Description *</label>
                                            @Html.TextAreaFor(m => m.Description, new { @placeholder = "Enter your description", @class = "form-control InputEmail1" })
                                            @Html.ValidationMessageFor(m => m.Description)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>submit</b></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Second Section Ends-->
    </form>
