<!DOCTYPE html>
<html ln="en">
<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width-device-width, initial-scale=1">

    <!-- Title -->
    <title>@ViewBag.Title</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon/favicon.ico")">

    <!-- Google Fonts -->
    <link rel="stylesheet" href="@Url.Content("https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap")">

    <!-- Font Awsome -->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-awesome/css/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-awesome/fontawesome-free-5.15.1-web/css/fontawesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-awesome/fontawesome-free-5.15.1-web/css/brands.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-awesome/fontawesome-free-5.15.1-web/css/solid.css")">

    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/css/bootstrap/bootstrap.min.css")

    <!-- Custome CSS -->
    @Styles.Render("~/Content/css/style.css")

    <!-- Responsive CSS -->
    @Styles.Render("~/Content/css/responsive.css")
</head>

<body data-target=".navbar">

    <!-- Header -->
    @if (ViewBag.IsHomePAge == null)
    {
        <header>
            <nav class="navbar fixed-top navbar-expand-lg white-nav-top white-navbar">
                <div class="container">

                    <div class="navbar-header">

                        <!-- Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!-- Logo -->
                        <a class="navbar-brand" href=""><img class="img-fluid" src="~/Content/images/pre-login/Capture.png"></a>
                    </div>

                    <!-- Main Menu -->
                    <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                @Html.ActionLink("Search Notes", "SearchNote", "Home", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Sell Your Notes", "Dashboard", "Home", null, new { @class = "nav-link" })
                            </li>
