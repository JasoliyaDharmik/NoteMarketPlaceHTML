@model NoteMarketPlaces.Models.User
@{
    ViewBag.Title = "Email Verification";
    Layout = "~/Views/Shared/NoHeader.cshtml";
}



    <!-- Email Verification -->
    <section id="email-verification">

        <div class="container email-container">
            <div class="row ">
                <div class="whitebg">
                    <div class="col-md-12 col-sm-10 col-12 col-lg-12 col-xl-12">
                        <img class="img-fluid" src="~/Content/images/pre-login/Capture.png">
                        <div class="verification-content">
                            <div class="email-content">
                                <h2>Email Verification</h2>                     
                                <h4>Dear @Model.FirstName,</h4>
                                <p>Thanks for Signing Up!</p>
                                <h1>Simply click below for email verify.</h1>
                            </div>
                            <!-- Verify Email button -->
                            <form method="post">
                                <input type="hidden" name ="id" value="@Model.UserID" />
                                <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>verify email address</b></button>
                            </form>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Email VArification End -->


