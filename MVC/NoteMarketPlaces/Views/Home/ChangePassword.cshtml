@model NoteMarketPlaces.Models.ChangePassword

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/NoHeader.cshtml";
}

    <section id="my-background">
        <div id="changepasswordpage" class="container">

            <!-- Logo -->
            <div class="row justify-content-center">
                <div id="loginlogo" class="text-center col-md-6 col-12 col-sm-12">

                    <img src="~/content/images/pre-login/top-logo.png" class="img-fluid" alt="Loin">
                </div>
            </div>


            <!-- Form -->
            <div class="row justify-content-center">

                <div class="col-12 col-md-12 col-sm-11 col-lg-9 col-xl-8">
                    <div id="changepasswordform">

                        <!-- Head Section -->
                        <div id="changepassword-head" class="text-center">
                            <h2>Change Password</h2>
                            <p>Enter your new password to change your password</p>
                        </div>

                        <!-- Form -->
                        <form method="post">

                            <!-- Password 1-->
                            <div class="form-group">
                                <label class="mylabel">Old Password</label>
                                <div class="wrapper">
                                    @Html.TextBoxFor(m => m.Password1, new { @type="password", @class="form-control InputPassword1", @placeholder="Enter your old password"})
                                    @Html.ValidationMessageFor(m => m.Password1)
                                    <img class="pass-eye" src="~/content/images/pre-login/eye.png" alt="Show">
                                </div>
                            </div>

                            <!-- Password 2-->
                            <div class="form-group">
                                <label class="mylabel">New Password</label>
                                <div class="wrapper">
                                    @Html.TextBoxFor(m => m.Password2, new { @type = "password", @class = "form-control InputPassword1", @placeholder = "Enter your new password" })
                                    @Html.ValidationMessageFor(m => m.Password2)
                                    <img class="pass-eye" src="~/content/images/pre-login/eye.png" alt="Show">
                                </div>
                            </div>

                            <!-- Password 3-->
                            <div class="form-group">
                                <label class="mylabel">Confirm Password</label>
                                <div class="wrapper">
                                    @Html.TextBoxFor(m => m.Password3, new { @type = "password", @class = "form-control InputPassword1", @placeholder = "Enter your confirm password" })
                                    @Html.ValidationMessageFor(m => m.Password3)
                                    <img class="pass-eye" src="~/content/images/pre-login/eye.png" alt="Show">
                                </div>
                            </div>

                            <!-- Login Button -->
                            <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>Submit</b></button>
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </section>
