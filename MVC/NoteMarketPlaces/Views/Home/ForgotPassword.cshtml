@model NoteMarketPlaces.Models.User
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/NoHeader.cshtml";
}


    <!-- Forgot Password Form -->
    <section id="my-background">
        <div id="forgotpasswordpage" class="container">

            <!-- Logo -->
            <div class="row justify-content-center">
                <div id="forgotpasswordlogo" class="text-cente">
                    <img src="~/Content/images/pre-login/top-logo.png" class="img-fluid" alt="Loin">
                </div>
            </div>


            <!-- Form -->
            <div class="row justify-content-center">

                <div class="col-12 col-md-12 col-sm-11 col-lg-9 col-xl-8">
                    <div id="forgotpasswordform">

                        <!-- Head Section -->
                        <div id="forgotpassword-head" class="text-center">
                            <h2>Forgot Password?</h2>
                            <p>Enter your email address to reset your password</p>
                        </div>

                        <!-- Form -->
                        <form method="post">

                            <!-- Email -->
                            <div class="form-group">
                                <label class="mylabel" for="InputEmail1">Email</label>
                                @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control", @id = "InputEmail", @placeholder = "Enter your Email Address" })
                                <p>@ViewBag.msg</p>
                            </div>

                            <!-- Login Button -->
                            <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>SUBMIT</b></button>
          
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Forgot Password Form End -->
